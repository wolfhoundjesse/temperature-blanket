{
  "name": "temperature-blanket",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:client": "bun build ./src/client/app.ts --outdir ./public/client --watch --target browser --minify --sourcemap",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "build": "rm -rf ./public/client && bun build ./src/client/app.ts --outdir ./public/client --target browser --minify",
    "start": "bun run src/server/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "build:prod": "NODE_ENV=production bun build ./src/client/app.ts --outdir ./public/client --target browser --minify",
    "start:prod": "NODE_ENV=production bun run src/server/index.ts",
    "deploy": "bun run build:prod && bun run start:prod"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/mithril": "^2.2.7",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "mithril": "^2.2.14"
  }
}
